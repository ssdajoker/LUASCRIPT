{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LUASCRIPT CI Status Bundle",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "workflow": { "type": "string" },
        "runId": { "type": "string" },
        "gitSha": { "type": "string" }
      },
      "required": ["timestamp", "workflow", "runId", "gitSha"],
      "additionalProperties": true
    },
    "checks": {
      "type": "object",
      "properties": {
        "test": { "type": "string" },
        "harness": { "type": "string" },
        "irValidate": { "type": "string" },
        "emitGoldens": { "type": "string" },
        "perf": { "type": "string" }
      },
      "required": ["test", "harness", "irValidate", "emitGoldens", "perf"],
      "additionalProperties": true
    }
  },
  "required": ["meta", "checks"],
  "additionalProperties": true
}